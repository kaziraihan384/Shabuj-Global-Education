generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model University {
  id              String   @id @default(uuid())
  name            String
  country         String
  city            String
  tuitionFee      Int
  ranking         Int
  establishedYear Int
  createdAt       DateTime @default(now())

  @@index([country])
  @@index([ranking])
  @@index([tuitionFee])
}
